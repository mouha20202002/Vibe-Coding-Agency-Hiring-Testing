# External API
API_KEY=your_external_api_key_here
API_BASE_URL=https://api.production-service.com/v1

# Database (use a secure credential store or secrets manager in prod)
# Example: postgresql://dbuser:dbpassword@dbhost:5432/dbname
DATABASE_URL=postgresql://dbuser:dbpassword@dbhost:5432/dbname

# Webhook forwarding / validation
WEBHOOK_ENDPOINT=https://internal-webhook.company.com/process
WEBHOOK_SECRET=your_webhook_hmac_secret_here

# AWS (prefer IAM role; set these only if you must)
AWS_REGION=us-east-1
S3_BUCKET=company-sensitive-data
# If running outside AWS infra and you must provide creds, use env:
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=smtp_user@example.com
SMTP_PASSWORD=super_secret_smtp_password
EMAIL_FROM=notifications@company.com
